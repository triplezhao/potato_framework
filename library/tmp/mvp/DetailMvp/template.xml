<?xml version="1.0"?>
<template
    format="3"
    revision="1"
    name="mvp + Detail"
    minApi="7"
    minBuildApi="17"
    description="Detail fm or activity">

    <category value="mvp" />

	 <parameter
        id="mvpClass"
        name="mvpClass Name"
        type="string"
        constraints="class|unique|nonempty"
        default="xxx"
        help="The name of the mvp class to create" />
	
    <parameter
        id="isFragment"
        name="isFragment"
        type="boolean"
        default="false"
        help="if true ,create fm file" />

    <parameter
        id="packageName"
        name="Package name"
        type="string"
        constraints="package"		
        default="com.mycompany.myapp" />


    <!-- 128x128 thumbnails relative to template.xml -->

    <globals file="globals.xml.ftl" />
    <execute file="recipe.xml.ftl" />

</template>
